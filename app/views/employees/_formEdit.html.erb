
<%= form_with model: @employee, local: true do |form| %>
    <div class="form-group">
      <%= form.label :employee_id, 'ID del Empleado' %>
      <%= form.number_field :employee_id, class: 'form-control', disabled: true%>
    </div>
  
    <div class="form-group">
      <%= form.label :last_name, 'Apellido' %>
      <%= form.text_field :last_name, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :first_name, 'Nombre' %>
      <%= form.text_field :first_name, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :title, 'Título' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :title_of_courtesy, 'Título de Cortesía' %>
      <%= form.text_field :title_of_courtesy, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :birth_date, 'Fecha de Nacimiento' %>
      <%= form.date_field :birth_date, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :hire_date, 'Fecha de Contratación' %>
      <%= form.date_field :hire_date, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :address, 'Dirección' %>
      <%= form.text_field :address, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :city, 'Ciudad' %>
      <%= form.text_field :city, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :region, 'Región' %>
      <%= form.text_field :region, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :postal_code, 'Código Postal (5 numeros)' %>
      <%= form.text_field :postal_code, class: 'form-control', required: true, pattern: "\\d{5}" %>
    </div>
  
    <div class="form-group">
      <%= form.label :country, 'País' %>
      <%= form.text_field :country, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :home_phone, 'Teléfono (10 numeros)' %>
      <%= form.text_field :home_phone, class: 'form-control', required: true, pattern: "\\d{10}" %>
    </div>
  
    <div class="form-group">
      <%= form.label :extension, 'Extensión (max 3)' %>
      <%= form.text_field :extension, class: 'form-control', required: true, pattern: "\\d{1,3}" %>
    </div>
  
    <div class="form-group">
      <%= form.label :photo, 'Foto' %>
      <%= form.file_field :photo, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :notes, 'Notas' %>
      <%= form.text_area :notes, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :reports_to, 'Supervisor' %>
      <%= form.number_field :reports_to, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :photo_path, 'Ruta de la Foto' %>
      <%= form.text_field :photo_path, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.submit 'Editar Empleado', class: 'btn btn-primary' %>
    </div>
  <% end %>
  